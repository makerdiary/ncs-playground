/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "connectkit_nrf52840-pinctrl.dtsi"

/ {
    model = "Makerdiary nRF52840 Connect Kit";
    compatible = "nordic,connectkit-nrf52840";

    chosen {
        zephyr,console = &uart0;
        zephyr,shell-uart = &uart0;
        zephyr,uart-mcumgr = &uart0;
        zephyr,bt-mon-uart = &uart0;
        zephyr,bt-c2h-uart = &uart0;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,code-partition = &slot0_partition;
        zephyr,ieee802154 = &ieee802154;
    };

    leds {
        compatible = "gpio-leds";
        led0_green: led_0 {
            gpios = <&gpio1 15 GPIO_ACTIVE_LOW>;
            label = "Green LED 0";
        };
        led1_red: led_1 {
            gpios = <&gpio1 10 GPIO_ACTIVE_LOW>;
            label = "Red LED 1";
        };
        led1_green: led_2 {
            gpios = <&gpio1 11 GPIO_ACTIVE_LOW>;
            label = "Green LED 1";
        };
        led1_blue: led_3 {
            gpios = <&gpio1 12 GPIO_ACTIVE_LOW>;
            label = "Blue LED 1";
        };
    };

    pwmleds {
        compatible = "pwm-leds";
        pwm_led0_green: pwm_led_0 {
            pwms = <&pwm0 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
        };        
        pwm_led1_red: pwm_led_1 {
            pwms = <&pwm0 1 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
        };
        pwm_led1_green: pwm_led_2 {
            pwms = <&pwm0 2 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
        };
        pwm_led1_blue: pwm_led_3 {
            pwms = <&pwm0 3 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpio1 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Push button switch 0";
        };
    };

    tps63802_force_pwm_mode: tps63802_force_pwm_mode {
        compatible = "regulator-fixed-sync", "regulator-fixed";
        regulator-name = "tps63802_force_pwm_mode";
        enable-gpios = <&gpio1 13 GPIO_ACTIVE_HIGH>;
        status = "okay";
        regulator-boot-on;
    };

    power_vsys_in {
        compatible = "voltage-divider";
        io-channels = <&adc 0>;
        output-ohms = <100000>;
        full-ohms = <(1000000 + 100000)>;
        power-gpios = <&gpio1 14 0>;
    };

    /* These aliases are provided for compatibility with samples */
    aliases {
        sw0 = &button0;
        led0 = &led0_green;
        led1 = &led1_red;
        led2 = &led1_green;
        led3 = &led1_blue;
        led0-green   = &led0_green;
        led1-red = &led1_red;
        led1-green  = &led1_green;
        led1-blue = &led1_blue;
        pwm-led0 = &pwm_led0_green;
        pwm-led1 = &pwm_led1_red;
        pwm-led2 = &pwm_led1_green;
        pwm-led3 = &pwm_led1_blue;
        red-pwm-led = &pwm_led1_red;
        green-pwm-led = &pwm_led1_green;
        blue-pwm-led = &pwm_led1_blue;
        mcuboot-button0 = &button0;
        mcuboot-led0 = &led0_green;
        watchdog0 = &wdt0;
        spi-flash0 = &mx25r64;
    };
};

&adc {
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    channel@0 {
        reg = <0>;
        zephyr,gain = "ADC_GAIN_1_4";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME(ADC_ACQ_TIME_MICROSECONDS, 40)>;
        zephyr,input-positive = <NRF_SAADC_AIN0>; /* P0.02 */
        zephyr,resolution = <12>;
        zephyr,oversampling = <4>;
    };
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&uart0 {
    status = "okay";
    compatible = "nordic,nrf-uarte";
    current-speed = <115200>;
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
};

&i2c0 {
    compatible = "nordic,nrf-twi";
    status = "okay";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
};

&pwm0 {
    status = "okay";
    pinctrl-0 = <&pwm0_default>;
    pinctrl-1 = <&pwm0_sleep>;
    pinctrl-names = "default", "sleep";
};

&nfct {
    status = "okay";
};

&ieee802154 {
    status = "okay";
};

&qspi {
    status = "okay";
    pinctrl-0 = <&qspi_default>;
    pinctrl-1 = <&qspi_sleep>;
    pinctrl-names = "default", "sleep";
    mx25r64: mx25r6435f@0 {
        compatible = "nordic,qspi-nor";
        reg = <0>;
        writeoc = "pp4io";
        readoc = "read4io";
        sck-frequency = <32000000>;
        jedec-id = [c2 28 17];
        sfdp-bfp = [
            e5 20 f1 ff  ff ff ff 03  44 eb 08 6b  08 3b 04 bb
            ee ff ff ff  ff ff 00 ff  ff ff 00 ff  0c 20 0f 52
            10 d8 00 ff  23 72 f5 00  82 ed 04 cc  44 83 68 44
            30 b0 30 b0  f7 c4 d5 5c  00 be 29 ff  f0 d0 ff ff
        ];
        size = <67108864>;
        has-dpd;
        t-enter-dpd = <10000>;
        t-exit-dpd = <35000>;
    };
};

/* Include flash partition table.
 * fstab-uf2-bootloader -compatible with UF2 bootloader, default
 */
#include "fstab-uf2-bootloader.dts"

zephyr_udc0: &usbd {
    compatible = "nordic,nrf-usbd";
    status = "okay";
};
